<!-- Toggle Contact Section
================================================== -->
<section id="contact">  <!-- Start contact -->
  <div class="container"> <!-- Container -->
        

        <%= form_tag(send_mail_path, remote: true, id: "contactForm") do %>
            <div class="form-group">
               
                <%= text_field_tag 'name', nil, class: 'form-control', placeholder: 'Your Name' %>
            </div>
           <div class="form-group">
               
               <%= email_field_tag 'email', nil, class: 'form-control', placeholder: 'Your Email Address' %>
           </div>
           <div class="form-group">
               
               <%= text_field_tag 'phone', nil, class: 'form-control', placeholder: 'Your Phone Number' %>
           </div>
           <div class="form-group">
               
               <%= text_area_tag 'message', nil, class: 'form-control', rows: 4, placeholder: 'Your Message' %>
           </div>

           <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <%= submit_tag 'Send Message', class: 'btn btn-send' %>
            </div>
       <% end %>




