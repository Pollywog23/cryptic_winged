

    <!-- Blog Posts
    ================================================== -->

    <div class="blog">
        <div class="container">
            <div class="row">
                  <%= paginate @blog_posts %>
                <!-- Blog post 1 -->
                 <% @blog_posts.each do |blog| %>
                <div class="blog-posts">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="post wow fadeIn" data-wow-delay="1s">
                            <h2><%= blog.title %></h2>
                            <div class="row">
                                <div class="col-lg-6">
                                    <h4 style="color:red; float:right;">Shawnna Jones</h4>
                                </div>
                                <div class="col-lg-6">
                                    <h5 style="float:left; margin-top:13px;"><%= blog.created_at.strftime("%B %-d, %Y") %><h5>
                                </div>
                            </div>
                            
                            
                            <%= image_tag blog.image(:large), :class => "img-responsive", :alt => "Image" %>
                            <%= blog.body.html_safe %>
                            
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="divider"></div>
                </div>
                  <% end %>
                <%= paginate @blog_posts %>
            </div>
        </div>
       </div>
